<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homeScreenBackground"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonFindSelectedDevice"
        style="@style/MenuButton"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="64dp"
                android:contentDescription="@string/arrow_content_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MenuTextStyle"
                android:text="@string/search_for_device"
                android:layout_alignParentBottom="true"
                android:scaleX="1" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonScanQRCode"
        style="@style/MenuButton"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="15dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/arrow_content_desc"
                android:src="@drawable/arrow" />

            <TextView
                style="@style/MenuTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleX="1"
                android:text="@string/scan_qr_code" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
