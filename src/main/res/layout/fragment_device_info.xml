<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    tools:context=".deviceinfo.DeviceInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            style="@style/DeviceDataTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/name" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/device_data_name"
                        style="@style/LightMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4" />

                    <TextView
                        android:id="@+id/edit_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:text="@string/edit"
                        android:textColor="@color/appEdit"
                        android:textSize="14sp" />

                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/device_id" />

                <TextView
                    android:id="@+id/deviceId"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/default_stream_id" />

                <TextView
                    android:id="@+id/default_stream_id"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/group" />

                <TextView
                    android:id="@+id/group"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/tags" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/tag"
                        style="@style/LightMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:maxLines="10" />

                    <TextView
                        android:id="@+id/edit_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:text="@string/edit"
                        android:textColor="@color/appEdit"
                        android:textSize="14sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/properties" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/properties"
                        style="@style/LightMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:maxLines="10" />

                    <TextView
                        android:id="@+id/edit_properties"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/helveticaneue_medium"
                        android:text="@string/edit"
                        android:textColor="@color/appEdit"
                        android:textSize="14sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/last_update_date" />

                <TextView
                    android:id="@+id/lastUpdateDate"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/registration_date" />

                <TextView
                    android:id="@+id/registrationDate"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>
                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/connectivity" />

                <TextView
                    android:id="@+id/connector"
                    style="@style/LightMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>
                <TextView
                    style="@style/DeviceDataTableRowLeftTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:text="@string/interface_status_info" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/device_status_status_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/device_status_image"
                        android:src="@drawable/icons_status_gray"
                        android:layout_marginTop="7dp"/>

                    <TextView
                        android:id="@+id/device_status_status"
                        style="@style/LightMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp" />

                    <Switch
                        android:id="@+id/interface_status_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchTheme" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</FrameLayout>