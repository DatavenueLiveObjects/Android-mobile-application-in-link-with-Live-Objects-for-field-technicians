<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/radio_button_selector</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/input_shape</item>
        <item name="android:button">@drawable/radio_button_inset</item>
    </style>

    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RefuseButton" parent="LoginButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_with_border</item>
    </style>


    <style name="ButtonSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/button_small_selector</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="LoginButton" parent="Button">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:height">140dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:color">@color/black</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">56dp</item>
    </style>

    <style name="AboutTextStyle" parent="MenuTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="AboutTextStyleBold" parent="AboutTextStyle" >
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Spinner">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorLoginInputText</item>
        <item name="android:textColorHint">@color/colorLoginInputText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DeviceDataTable">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LightMode">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="DeviceDataTableRowLeftTextView" parent="LightMode">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="DeviceList">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="EditLocationTableRow">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">27dp</item>
    </style>

    <style name="EditLocationTableRowBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">27dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AgreeTerms" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorSplashScreenBackground</item>
        <item name="android:colorBackground">@color/colorSplashScreenBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorLoginBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorSplashScreenBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.Login" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorLoginBackground</item>
        <item name="android:textViewStyle">@style/BoldTextStyle</item>
        <item name="android:buttonStyle">@style/BoldTextStyle</item>
    </style>

    <style name="DeviceStatusTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeviceStatusSubtitle">
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeviceStatusDeviceName">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeviceStatusDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeviceStatusTextBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeviceStatusTextBlackBold" parent="DeviceStatusTextBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LoginAndPasswordInput">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/colorLoginBackground</item>
        <item name="android:textColor">@color/colorLoginInputText</item>
        <item name="android:layout_height">49dp</item>
    </style>

    <style name="PropertiesInput">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/colorLoginBackground</item>
        <item name="android:textColor">@color/colorLoginInputText</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="TextInputLayoutHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/colorLoginInputText</item>
        <item name="android:colorControlNormal">@color/colorLoginInputText</item>
        <item name="android:colorControlActivated">@color/colorLoginInputText</item>
    </style>

    <style name="LocationInput">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PropertiesTitleLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:listDivider">@color/lastDateGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LegalMentionsTextHeader" parent="LegalMentionsText" >
        <item name="android:textColor">@color/appEdit</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="LegalMentionsText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="TermsText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="TermsTextTitle" parent="TermsText">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="support">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="forQuestionsRemark">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:lineSpacingMultiplier">1.43</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/active_button_color</item>
    </style>

    <!-- Show on map styles -->

    <style name="RoundedBox" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="LocationRadioText">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SelectFilterTextPrimary">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SelectFilterTextSecondaryGray">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/subtextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FindMyDeviceSecondaryGray">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subtextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TheoreticalCoverageMapPrimaryText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="ActivityLogsRowLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>

    <style name="ActivityLogsRowValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>

    <style name="ActivityLogsTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">33dp</item>
    </style>

</resources>
